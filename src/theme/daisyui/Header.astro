---
const { siteTitle, topics } = Astro.props;
---

<div class="navbar bg-base-300">
	<div class="container mx-auto">
		<div class="flex-1">
			<a class="btn btn-ghost normal-case text-xl" href="/">{siteTitle}</a
			>
		</div>
		<div class="flex-none">
			<ul class="menu menu-horizontal px-1">
				{
					topics.map((topic) => (
						<li>
							<a href={"/topic/" + topic.topicID}>
								{topic.topicName}
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</div>
